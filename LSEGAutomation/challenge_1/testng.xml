<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Challenge_1_Suite" parallel="methods" thread-count="3">

    <test name="Classic_Tests">
        <classes>
            <class name="com.lseg.LastThreeDigitCheckerTest"/>
        </classes>
    </test>

    <test name="Grouped_Tests">
        <groups>
            <run>
                <include name="positive"/>
                <include name="edge"/>
                <include name="negative"/>
                <include name="AI/ML"/>
            </run>
        </groups>
        <classes>
            <class name="com.lseg.LastThreeDigitCheckerTest"/>
            <class name="com.lseg.AIDigitDetectorMLTest"/>
        </classes>
    </test>

    <test name="AI_ML_Tests">
        <classes>
            <class name="com.lseg.AIDigitDetectorMLTest"/>
        </classes>
    </test>

</suite>
